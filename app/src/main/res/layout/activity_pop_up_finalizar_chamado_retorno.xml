<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_window_backgroundr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PopUpFinalizarChamadoRetornoActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/popup_window_view_with_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/popup_window_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/popup_window_background_container"
                android:layout_width="270dp"
                android:minHeight="700dp"
                android:background="#0039cb"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/popup_window_title"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="18dp"
                        android:background="#2962ff"
                        android:text="FINALIZAR CHAMADO COM RETORNO"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="7dp"
                        android:text="PROTOCOLO"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/protocolor"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/et_bg"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="TESTANDO"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="7dp"
                        android:text="Cliente"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/clienter"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/et_bg"
                        android:text="TESTANDO"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="7dp"
                        android:text="Contador PB"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/contadorPBr"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/et_bg"
                        android:text="TESTANDO"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="7dp"
                        android:text="Contador cl"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/contadorCLr"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/et_bg"
                        android:text="TESTANDO"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="7dp"
                        android:text="Motivo"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/motivor"
                        android:layout_width="250dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/et_bg"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="TESTANDO"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="7dp"
                        android:text="Obs.PrÃ³ximo chamado"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/obsProxChamador"
                        android:layout_width="250dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/et_bg"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="TESTANDO"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="7dp"
                        android:text="peÃ§as"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

<!--                    <Spinner-->
<!--                        android:id = "@+id/spinner"-->
<!--                        android:layout_width = "wrap_content"-->
<!--                        android:layout_height = "wrap_content"-->
<!--                        android:textColor="#FFFFFF"-->
<!--                        android:textSize="20sp"-->
<!--                        android:prompt = "@string/app_name" />-->

                    <com.example.trackersinall.util.MultiSelectionSpinner
                        android:id="@+id/spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp" />

                    <ProgressBar
                        android:id="@+id/progressBarr"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>

                <Button
                    android:id="@+id/popup_window_buttonr"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#2962ff"
                    android:text="FINALIZAR"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>